<section>
    <form action="post" class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label for="email" class="col-lg-2 control-label">Email</label>
                <div class="col-lg-8">
                    <input placeholder="Email" type="email" class="form-login form-control" id="tb-email" >
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-lg-8">
                    <input placeholder="Password" type="password" class="form-login form-control" id="tb-password" >
                </div>
            </div>

            <div class="form-group">
               <div class="col-lg-10 col-lg-offset-2">
                   <button id="btn-login" class="form-login btn">Sign in</button>
               </div>
            </div>
        </fieldset>
    </form>
</section>