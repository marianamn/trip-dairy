<section id="trip-diaries-list">

    <ol class="my-breadcrumb d-flex justify-content-center">
        <li class="my-breadcrumb-item">
            <a href="#">Home</a>
            <i class="fa fa-angle-double-right my-breadcrumb-arrow" aria-hidden="true"></i>
        </li>
        
        <li class="my-breadcrumb-item active">
            Trip diaries
            <i class="fa fa-angle-double-right my-breadcrumb-arrow" aria-hidden="true"></i>
        </li>
    </ol>

    <div class="justify-content-center title-container"> 
        <p class="d-flex justify-content-center diaries-title"><span>Trip diaries</span></p>
        <p class="d-flex justify-content-center diaries-sub-title">by authors</p>
        <p class="d-flex justify-content-center"><img class="img-fluid" src="../images/x-separator.png" alt="separator"></p>
    </div>

    <div class="container justify-content-center diaries">
        {{#each this}}
            <div class="row justify-content-center diaries-list">
                <div class="col-sm-3 author-container">
                    {{#with userInfo}}
                        <div class="img-fluid hexagon hexagon2 float-left">
                            <div class="img-fluid hexagon-in1">
                                <div class="img-fluid" id="hexagon-in2" style=" 
                                background-image:-moz-linear-gradient(top, rgba(5, 5, 5, 0) 0%, rgba(5, 5, 5, 0.02) 2%, rgba(5, 5, 5, 1) 100%),url('{{profileImage}}');
                                background-image:-webkit-linear-gradient(top, rgba(5, 5, 5, 0) 0%, rgba(5, 5, 5, 0.02) 2%, rgba(5, 5, 5, 1) 100%),url('{{profileImage}}');
                                background-image:linear-gradient(to bottom, rgba(5, 5, 5, 0) 0%, rgba(5, 5, 5, 0.02) 2%, rgba(5, 5, 5, 1) 100%)'),url('{{profileImage}}');">
                                <p class="d-flex justify-content-center author-name">
                                    {{fullName}}
                                </p>
                                </div>
                            </div>
                        </div>

                        <p class="user-info">{{userInfo}}</p>
                        <p class="user-socials d-flex align-items-center justify-content-center">
                            <a href="{{facebookContact}}" target="blank"><i class="fa fa-facebook user-socials-icons" aria-hidden="true"></i></a>
                            <a href="{{youTubeContact}}" target="blank"><i class="fa fa-youtube user-socials-icons" aria-hidden="true"></i></a>
                            <a href="{{twitterContact}}" target="blank"><i class="fa fa-twitter user-socials-icons" aria-hidden="true"></i></a>
                            <a href="{{googlePlusContact}}" target="blank"><i class="fa fa-google-plus user-socials-icons" aria-hidden="true"></i></a>
                            <a href="{{instagramContact}}" target="blank"><i class="fa fa-instagram user-socials-icons" aria-hidden="true"></i></a>
                            <a href="{{rssContact}}" target="blank"><i class="fa fa-rss user-socials-icons" aria-hidden="true"></i></a>
                        </p>
                    {{/with}}
                </div>
            
                <div class="row col-sm-9 diaries-container">
                    {{#each tripsGrouped}}
                        <div class="col-sm-6">
                            <div class="img-fluid diary-img" style="background-image:url('{{this.tripsData.mainImage}}')">
                                <div class="diary-img-container">
                                    <p class="diary-img-container-name align-items-sm-end">
                                        <a class="d-flex align-items-sm-end justify-content-center" href="#/trip-diaries/{{this.tripsData._id}}" data-id="{{this.tripsData._id}}">{{this.tripsData.title}}</a>
                                    </p>
                                    <p class="diary-img-container-date d-flex align-items-sm-end justify-content-center">{{date}}</p>
                                </div>
                            </div>
                            
                            <div class="justify-content-center diry-icons">
                                <p class="float-left diry-like"><i class="fa fa-heart-o diry-like-icon" aria-hidden="true"></i>{{this.tripsData.likes}} Likes</p>
                                <p class="float-right diry-comments"><i class="fa fa-comment-o diry-comment-icon" aria-hidden="true"></i>{{this.tripsData.comments.length}} Comments</p>
                                <hr class="clear"/>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div> 

            <div class="justify-content-center separator"> 
                <p class="d-flex justify-content-center"><img class="img-fluid" src="../images/x-separator.png" alt="separator"></p>
            </div>

        {{/each}}
    </div>
</section>